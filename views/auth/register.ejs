<div id="main-content">
    <div class="container">
        <div class="auth-container">
            <div class="login-curved-shape"></div>
            <div class="form-container login">
                <h2>Sign Up</h2>
                <div class="errors hide">error</div>
                <form id="register" autocomplete="off">
                    <div class="input-box">
                        <input type="text" id="name" name="name" required>
                        <label for="name">User name</label>
                        <i><img src="./img/icons/user.png" alt=""></i>
                        <div class="register-errors">User name required</div>
                    </div>
                    <div class="input-box">
                        <input type="text" id="email" name="email" required>
                        <label for="mail">Email address</label>
                        <i><img src="./img/icons/user.png" alt=""></i>
                        <div class="register-errors">Email required</div>
                    </div>
                    <div class="input-box">
                        <input type="password" id="password" name="password" required>
                        <label for="password">Password</label>
                        <i><img src="./img/icons/lock.png" alt=""></i>
                        <div class="register-errors">Password required</div>
                    </div>
                    <div class="input-box">
                        <button type="submit" class="btn">Sign Up</button>
                    </div>
                    <div class="regi-link">
                        <p>Already have an account? <a href="/login" class="signUp-link">Login</a></p>
                    </div>
                </form>
            </div>
            <div class="info-content login">
                <h2>LET US KNOW YOU</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Alias, eveniet?</p>
            </div>
        </div>
    </div>

</div>
